<h1>Reply</h1>

<h3>Asked by: <%= @question.user.username %> </h3>

<%= form_for :answer, url: answers_path do |f| %>

  <p>
    <%= f.text_field :title, :placeholder => "Title" %>
  </p>

  <p>
    <%= f.text_area :description, :placeholder => "Your Question Here" %>
  </p>

  <p>
    <%= f.submit "Create Question" %>
  </p>
<% end %>

<%= link_to 'Answer Question', questions_path %><br><br>
<%= link_to 'Questions Home Page', questions_path %>
